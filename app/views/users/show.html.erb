<div class="containar px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/user', book: @book, user: @user %>
    </div>

    <div class="offset-md-1">
    </div>

    <div class="col-md-8">
      <h1>Books</h1>
      <table class = "table table-striped">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image(100,100) %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><span><%= book.body %></span></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
