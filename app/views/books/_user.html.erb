<h1>User info</h1>
<table class='table'>
  
    <tr>
      <%= image_tag user.get_profile_image(100,100) %>
    </tr>
    <tr>
      <th>name</th>
      <th><span><%= user.name %></span></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><span><%= user.introduction %></span></th>
    </tr>
  
</table>

<%= link_to "edit", edit_user_path(current_user) %>

<h1>New book</h1>
<%= form_with model: book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>