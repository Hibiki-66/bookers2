<p id="notice"><%= notice %></p>

<div class="containar px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
        <table class='table'>
          <% @books.each do |book| %>
            <tr>
              <%= image_tag book.user.get_profile_image(100,100) %>
            </tr>
            <tr>
              <th>name</th>
	            <th><span><%= book.user.name %></span></th>
            </tr>
            <tr>
              <th>introduction</th>
	            <th><span><%= book.user.introduction %></span></th>
            </tr>
          <% end %>
        </table>
            

      <h1>New book</h1>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>

    <div class="offset-md-1">
    </div>

    <div class="col-md-8">
      <h1>Books</h1>
      <table class = "table table-striped">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Body</th>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image(100,100) %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><span><%= book.body %></span></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>